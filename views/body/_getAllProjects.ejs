<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    <% for(project of projects){%>
     <% console.log(project); %>
    <div class="col">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white"> <%= project.name %> </div>
        

        <div class="card-body">
          <p class="card-text"><%= project.description %></p>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <a href="/project/view-project/<%=project._id%>" class="btn btn-sm btn-outline-secondary">View Project</a>
              <a href="/issue/add-issue/<%=project._id%>" class="btn btn-sm btn-outline-secondary">Add Issues</a>
            </div>
           
          </div>
        </div>
        <div class="card-footer">
          <div class="float-start"><%= project.authorName %></div>
          <div class="float-end"><%= project.issue.length %></div>
        </div>
      </div>
    </div>
   <% } %>
 
</div>
 <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 mt-5">
    <div class="col">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <% if (current == 1) { %>
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Previous</a>
                    </li>
                <% } else { %>
                    <li class="page-item">
                        <a class="page-link" href="/project/get-all-projects/<%= parseInt(current) - 1 %>" tabindex="-1">Previous</a>
                    </li>
                <% } %>
                <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                <% if (i !== 1) { %>
                    <li class="disabled page-item"><a class="page-link">...</a></li>
                <% } %>
                <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                    <% if (i == current) { %>
                        <li class="page-item "><a class="page-link"><%= i %></a></li>
                    <% } else { %>
                        <li class="page-item"><a class="page-link" href="/project/get-all-projects/<%= i %>"><%= i %></a></li>           
                    <% } %>
                    <% if (i == Number(current) + 4 && i < pages) { %>
                        <li class="page-item disabled"><a class="page-link">...</a></li>
                    <% } %>
                
                <% } %>
               
                <li class="page-item disabled"><a class="page-link" href="/project/get-all-projects/<%= pages %>">Next</a></li>
            
            </ul>
      </nav>
    </div>
</div>


    

       
    
    

